$modal = $('.modal'),
$modalBody = $('.modal .modal-body');
$modalHeading = $('.modal .modal-heading');
$modalHeading.html("<% if (@product.name == "" || @product.name.nil?) %><%= t(:none) %><% else %><%= @product.name.humanize %><% end %>");
$modalBody.html("<%= escape_javascript(render @product) %>");
$modal.modal();